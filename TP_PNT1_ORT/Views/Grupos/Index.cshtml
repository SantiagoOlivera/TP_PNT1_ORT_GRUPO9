@{
    
}

<table id="grupos" class="table table-striped table-bordered" style="width:100%">
        
        
        @Html.Partial("~/Views/Shared/_BotonAgregar.cshtml")

        <br/>
        <br/>

        <thead>
            <tr>
                <th>ID Grupo</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Operaciones</th>
            </tr>
        </thead>

        <tbody>
            
             @foreach(Grupo grupo in ViewBag.grupos){
                 
                <tr>
                    <td>@grupo.idGrupo</td>
                    <td>@grupo.nombre</td>
                    <td>@grupo.descripcion</td>
                    <td>@Html.Partial("~/Views/Shared/_BotonVerModificarEliminar.cshtml",  new { id = grupo.idGrupo } )</td>
                </tr>

             }
           
        </tbody>
        <tfoot>
        </tfoot>
</table>


<script>
    $(document).ready(function() {
        $('#grupos').DataTable();
    });
</script>