@{
}

@model List<Mundial>

<h1>Mundiales</h1>

<table id="mundiales" class="table table-striped table-bordered" style="width:100%">
        
        
        @Html.Partial("~/Views/Shared/_BotonAgregar.cshtml")

        <br/>
        <br/>

        <thead>
            <tr>
                <th>Año</th>
                <th>Descripción</th>
                <th>Sede</th>
                <th>Operaciones</th>
            </tr>
        </thead>

        <tbody>
            
             @foreach(Mundial m in @Model){
                 
                <tr>
                    <td>@m.anio</td>
                    <td>@m.descripcion</td>
                    <td>@m.pais</td>
                    <td>@Html.Partial("~/Views/Shared/_BotonVerModificarEliminar.cshtml",  new { anio = m.anio} )</td>
                </tr>

             }
           
        </tbody>
        <tfoot>
        </tfoot>
</table>