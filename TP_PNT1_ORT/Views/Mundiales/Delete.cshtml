@{
}

<h1>Mundial</h1>
<h4>Eliminar</h4>

@if(ViewBag.ErrorMessage != null){
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}


<form id="mundial" method="POST" action="">

  <div class="form-group">
    <label>Año</label>
    <input type="text" class="form-control" value="@Model.anio" name="anio"  placeholder="Año" required readonly>
  </div>

  <div class="form-group">
    <label >Descripción</label>
    <input type="text" class="form-control" value="@Model.descripcion" name="descripcion" placeholder="Descripción" required readonly>
  </div>

  <div class="form-group">
    <label >País</label>
    <input type="text" class="form-control" value="@Model.pais" name="pais" placeholder="País" required readonly>
  </div>

  <button type="submit" class="btn btn-danger"  onclick="Delete" >Eliminar</button>

</form>