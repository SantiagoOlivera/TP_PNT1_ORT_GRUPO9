<h1>Login</h1>

<form id="login" method="POST" action="">

  <div class="form-group">
    <label>Email address</label>
    <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted"  >We'll never share your email with anyone else.</small>
  </div>

  <div class="form-group">
    <label >Password</label>
    <input type="password" class="form-control" name="password" placeholder="Password">
  </div>

  <button type="submit" onclick="login(event)" class="btn btn-primary">Login</button>

</form>


<script>

    var form = document.querySelector("#login");
    //console.log(form);

    function login(e){

        e.preventDefault();

        var email    = document.querySelector("#login [name=email]").value
        var password = document.querySelector("#login [name=password]").value
        var data =  { email: email , password: password } 

        //console.log( data );

        var req = new XMLHttpRequest();
        req.open("POST", window.location + "/Login", true,  );
        req.setRequestHeader("Content-Type", "application/json;charset=UTF-8");
        req.send( 
            JSON.stringify( data )   
        );
        

    }

</script>