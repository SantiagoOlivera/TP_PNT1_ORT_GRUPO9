@model IList<Partido>

<h1>Partidos</h1>

@{
    int i = 0;
    string grupo = Model[i].grupo;
    int fecha = Model[i].numeroDeFecha;
}


<br />
<br />

@while( i < Model.Count )
{   
    //agrupamos por grupo
    grupo = Model[i].grupo;
    @*<p>Grupo @Model[i].grupo</p>*@

     <div class="card border-primary mb-3">
            <div class="card-header"> Grupo @Model[i].grupo </div>
            <div class="card-body text-primary">

    
    @while (i < Model.Count && grupo.Equals(Model[i].grupo) )
    {
        fecha = Model[i].numeroDeFecha;    
        @*<p>Fecha @Model[i].numeroDeFecha</p>*@

        //agrupamos por numero fecha
        <div class="card border-primary mb-3">
            <div class="card-header"> Fecha @Model[i].numeroDeFecha </div>
            <div class="card-body text-primary">

            
        
        @while (i < Model.Count && grupo.Equals(Model[i].grupo) && fecha == Model[i].numeroDeFecha)
        {
            @*<p>@Model[i].equipo1</p>
            <p>@Model[i].equipo2</p>*@

            <div class="card border-primary mb-3">
            <div class="card-header"> @Model[i].fecha </div>
            <div class="card-body text-primary">
                <form>
                    <div class="container">
                        <div class="row flex-nowrap">
                            <div class="col-3 align-content-center">
                                <label style="text-align:center;">@Model[i].equipo1</label>
                            </div>
                            <div class="col-3 align-content-center">
                                <input type="text" value="@Model[i].golesEquipo1" maxlength="2" style="max-width:35px;text-align:center;" readonly/>
                            </div>
                            <div class="col-3 align-content-center">
                                <input type="text" value="@Model[i].golesEquipo2" maxlength="2" style="max-width:35px;text-align:center;" readonly/>
                            </div>
                            <div class="col-3 align-content-center">
                                <label style="text-align:center;">@Model[i].equipo2</label>
                            </div>
                
                        </div>
                    </div>
        
                </form>
            </div>
        </div>





            i++;

        }

            </div>
        </div>

    }

      </div>
        </div>

}