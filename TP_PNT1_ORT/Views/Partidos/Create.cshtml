@model TP_PNT1_ORT.Models.Partido



<h1>Partido</h1>
<h4>Agregar</h4>



<form id="partido" method="POST" action="">

  <div class="form-group">
    <label>Año mundial</label>
    <input type="text" class="form-control" name="mundial" value="@ViewBag.anio" placeholder="Mundial" required readonly>
  </div>

  <div class="form-group">

    <label>Grupo</label>
    <br/>
    <select class="form-control" name="grupo">
        <option disabled selected value=""></option>
        <option value="A">A</option>
        <option value="B">B</option>
        <option value="C">C</option>
        <option value="D">D</option>
        <option value="E">E</option>
        <option value="F">F</option>
        <option value="G">G</option>
        <option value="H">H</option>
    </select>

  </div>

  <div class="form-group">
    <label>Equipo 1</label>
    <input type="text" class="form-control" name="equipo1"  placeholder="Equipo 1" required>
  </div>

  <div class="form-group">
    <label>Equipo 2</label>
    <input type="text" class="form-control" name="equipo2"  placeholder="Equipo 2" required>
  </div>
    
  <div class="form-group">
    <label>Fecha</label>
    <input type="text" class="form-control" name="fecha"  placeholder="Fecha partido" required>
  </div>

  
  <div class="form-group">
    <label>Número fecha</label>
    <input type="number" min="1" max="3" maxlength="1" class="form-control" name="numeroDeFecha"  placeholder="Número fecha" required>
  </div>


  <button type="submit" class="btn btn-success"  onclick="Create" >Guardar</button>

</form>