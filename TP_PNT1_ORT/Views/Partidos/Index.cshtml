@{
}



@model List<Mundial>

<h1>Partidos</h1>
<h4>Mundial</h4>

@if(ViewBag.ErrorMessage != null){
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<br />

<table id="usuarios" class="table table-striped table-bordered" style="width:100%;">

    <thead>
        <tr>
            <th>Año</th>
            <th>Descripción</th>
            <th>Sede</th>
            <th>Ver</th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < Model.Count ; i++)
        {
            <tr>
                <td>
                    @Model[i].anio
                </td>
                <td>
                    @Model[i].descripcion
                </td>
                <td>
                    @Model[i].pais
                </td>
                <td>
                    @Html.ActionLink("Ver","Details", null, null, null, null, new { anio = @Model[i].anio } , new { @class = "btn btn-warning" } )
                    @Html.ActionLink("Partidos","List", null, null, null, null, new { anio = @Model[i].anio } , new { @class = "btn btn-primary" } )
                </td>
            </tr>
        }
    </tbody>


</table>