@model List<Apuesta>

<h1>Hacer apuesta</h1>
<h4>Partidos</h4>

<form id="apuestas" method="POST" action="">

@for(int i = 0; i< @Model.Count ; i++)
{

<div class="card border-primary mb-3">
    
    <div class="card-header"> @Model[i].partido.grupo </div>
    
    <div class="card-body text-primary">
        
            
           @* <input type="text" class="form-control" name="idGrupo" value="@Model[i].idGrupo" />
            <input type="text" class="form-control" name="idPartido" value="@Model[i].idPartido" />
            <input type="text" class="form-control" name="email" value="@Model[i].email" />*@
            @Html.HiddenFor(x=> @Model[i].idGrupo)
            @Html.HiddenFor(x=> @Model[i].idPartido)
            @Html.HiddenFor(x=> @Model[i].email)

            <div class="container">
                <div class="row flex-nowrap">
                    <div class="col-3 align-content-center">
                        <label style="text-align:center;">@Model[i].partido.equipo1</label>
                    </div>
                    <div class="col-3 align-content-center">
                        @*<input class="form-control" type="text" name="golesEquipo1" value="@Model[i].golesEquipo1" maxlength="2" style="max-width:35px;text-align:center;" />*@
                        @Html.TextBoxFor(x=>@Model[i].golesEquipo1, new { maxlength="2", style="max-width:35px;text-align:center;", @class = "form-control" })
                    </div>
                    <div class="col-3 align-content-center">
                        @*<input class="form-control" type="text" name="golesEquipo2" value="@Model[i].golesEquipo2" maxlength="2" style="max-width:35px;text-align:center;" />*@
                        @Html.TextBoxFor(x=>@Model[i].golesEquipo2, new { maxlength="2", style="max-width:35px;text-align:center;", @class = "form-control" })
                    </div>
                    <div class="col-3 align-content-center">
                        <label style="text-align:center;">@Model[i].partido.equipo2</label>
                    </div>
                
                </div>
            </div>
    </div>
</div>

}

<button type="submit" class="btn btn-success"  onclick="Edit" >Guardar</button>

</form>